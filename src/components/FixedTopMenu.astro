---
import Icon from "./Icon.astro";
---

<div class="fixed z-[99999999] flex w-full items-center justify-center">
  <div
    class="mt-4 flex w-11/12 gap-6 rounded-2xl border border-solid border-gray-700 bg-gray-800 p-1 shadow-xl md:w-fit"
  >
    <div
      class="flex h-9 w-full items-center justify-between gap-0 md:justify-start"
    >
      <a href="/" class="site-title flex text-purple-300 md:hidden">
        <Icon
          icon="terminal-window"
          color="text-secondary"
          size="1.6em"
          gradient
        />
        <span class="ms-1 my-auto">Rashidtvmr</span>
      </a><div class="flex h-full w-fit items-center gap-x-2 md:hidden">
        <nav
          class="flex h-9 w-9 items-center justify-center"
          data-projection-id="22"
        >
          <input
            id="dropdown"
            class="input-box peer/hamburger"
            type="checkbox"
            style="display:none;"
          />
          <label for="dropdown" class="dropdown rounded-xl">
            <span class="hamburger">
              <span class="icon-bar top-bar"></span>
              <span class="icon-bar middle-bar"></span>
              <span class="icon-bar bottom-bar"></span>
            </span>
          </label>
          <div class="hidden peer-checked/hamburger:block">
            <div class="absolute left-[4%] top-[4.2rem] w-[100vw]">
              <div
                class="box-border flex w-11/12 origin-top select-none flex-col rounded-xl bg-[#292929] shadow-lg md:hidden"
                data-projection-id="94"
                style="opacity: 1; transform: none;"
              >
                <div>
                  <a
                    class="[&>div]:last:border-none"
                    rel="noopener, noreferrer"
                    target=""
                    href="/"
                    ><div
                      class="box-border flex w-full items-center justify-between gap-x-[2px] border-b border-white/[0.06] px-4 py-3"
                    >
                      <span
                        class="body-small flex h-full cursor-pointer items-center text-white hover:opacity-[.8]"
                        >Home</span
                      >
                    </div>
                  </a>
                  <a
                    class="[&>div]:last:border-none"
                    rel="noopener, noreferrer"
                    target=""
                    href="/work"
                  >
                    <div
                      class="box-border flex w-full items-center justify-between gap-x-[2px] border-b border-white/[0.06] px-4 py-3"
                    >
                      <span
                        class="body-small flex h-full cursor-pointer items-center text-white hover:opacity-[.8]"
                        >Work</span
                      >
                    </div></a
                  >
                  <a
                    class="[&>div]:last:border-none"
                    rel="noopener, noreferrer"
                    target=""
                    href="/about"
                    ><div
                      class="box-border flex w-full items-center justify-between gap-x-[2px] border-b border-white/[0.06] px-4 py-3"
                    >
                      <span
                        class="body-small flex h-full cursor-pointer items-center text-white hover:opacity-[.8]"
                        >About</span
                      >
                    </div><div class="h-full w-full grid grid-cols-2"></div></a
                  >
                </div>
              </div>
            </div>
          </div>
        </nav>
      </div>
      <a class="hidden md:inline" rel="noopener, noreferrer" target="" href="/"
        ><span
          class="body-small hidden h-full cursor-pointer items-center px-3 text-white hover:opacity-80 md:flex"
          >Home</span
        >
      </a>
      <a
        class="hidden md:inline"
        rel="noopener, noreferrer"
        target=""
        href="/work"
        ><span
          class="body-small hidden h-full cursor-pointer items-center px-3 text-white hover:opacity-80 md:flex"
          >Work</span
        >
      </a>
      <a
        class="hidden md:inline"
        rel="noopener, noreferrer"
        target=""
        href="/about"
        ><span
          class="body-small hidden h-full cursor-pointer items-center px-3 text-white hover:opacity-80 md:flex"
          >About</span
        ></a
      >
    </div>
  </div>
</div>

<style>
  .dropdown {
    display: flex;
    justify-content: space-between;
  }

  .hamburger {
    align-self: flex-end;
  }

  label {
    cursor: pointer;
  }

  input[type="checkbox"] + label .icon-bar {
    display: block;
    width: 22px;
    height: 2px;
    background-color: #cccccc;
    margin: 4px;
    transition: all 0.2s;
  }
  input[type="checkbox"] + label .top-bar {
    transform: rotate(0);
  }
  input[type="checkbox"] + label .middle-bar {
    opacity: 1;
  }

  input[type="checkbox"]:checked + label .top-bar {
    transform: rotate(45deg);
    transform-origin: 10% 10%;
  }
  input[type="checkbox"]:checked + label .middle-bar {
    opacity: 0;
  }
  input[type="checkbox"]:checked + label .bottom-bar {
    transform: rotate(-45deg);
    transform-origin: 10% 90%;
  }
</style>
